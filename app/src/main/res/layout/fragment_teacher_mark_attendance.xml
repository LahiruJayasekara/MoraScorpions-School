<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mlpj.www.morascorpions.TeacherMarkAttendanceFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/tvAttendanceDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnOnSelectDate"
            android:text="@string/select_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/onMarkAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mark_attendance"/>
    </LinearLayout>

</FrameLayout>
